RewriteEngine on

RewriteCond %{ENV:REDIRECT_STATUS} 200
RewriteRule .* - [L]

RewriteRule ^characters/*$ index.php?type=characters [NC,L]
RewriteRule ^weapons/*$ index.php?type=weapons [NC,L]

RewriteRule ^(characters|weapons)/create$ crud/create.php?type=$1 [NC,L]
RewriteRule ^(characters|weapons)/update$ crud/update.php?type=$1 [NC,L]
RewriteRule ^(characters|weapons)/delete$ crud/delete.php?type=$1 [NC,L]

RewriteRule ^(characters|weapons)/([a-zA-Z-']+)$ crud/read.php?type=$1&name=$2 [NC,L]

#redirect the link with .php extension
RewriteRule ^([^\.]+)$ $1.php [NC,L]